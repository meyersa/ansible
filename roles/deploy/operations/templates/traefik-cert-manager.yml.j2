apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-dns-token
  namespace: {{ NAMESPACE }}
type: Opaque
stringData:
  api-token: {{ CLOUDFLARE_DNS_TOKEN }}

---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: le-prod
spec:
  acme:
    server: https://acme-staging-v02.api.letsencrypt.org/directory
    email: {{ TLS_EMAIL }}
    privateKeySecretRef:
      name: le-prod-key
    solvers:
      - dns01:
          cloudflare: 
            apiTokenSecretRef:
                name: cloudflare-dns-token
                key: api-token