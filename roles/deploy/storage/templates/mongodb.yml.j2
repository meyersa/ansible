---
apiVersion: mongodbcommunity.mongodb.com/v1
kind: MongoDBCommunity
metadata:
  name: prod-mongodb
  namespace: {{ NAMESPACE }}
  labels:
    app: prod-mongodb-svc
spec:
  members: 1
  type: ReplicaSet
  version: "6.0.5"
  security:
    authentication:
      modes: ["SCRAM"]
  users:
    - name: root
      db: admin
      passwordSecretRef:
        name: mongodb-root
      roles:
        - name: Admin
          db: admin
        - name: userAdminAnyDatabase
          db: admin
      scramCredentialsSecretName: my-scram
  statefulSet:
    spec:
      selector:
        matchLabels:
          app: prod-mongodb-svc
      template:
        metadata:
          labels:
            app: prod-mongodb-svc
        spec:
          containers:
            - name: mongod
              resources:
                requests:
                  cpu: "200m"
                  memory: "300Mi"
                limits:
                  cpu: "500m"
                  memory: "400Mi"
            - name: mongodb-agent
              resources:
                requests:
                  cpu: "200m"
                  memory: "300Mi"
                limits:
                  cpu: "500m"
                  memory: "400Mi"
      volumeClaimTemplates:
        - metadata:
            name: data-volume
          spec:
            storageClassName: longhorn-retain
            accessModes: ["ReadWriteOnce"]
            resources:
              requests:
                storage: 5Gi

---
apiVersion: v1
kind: Secret
metadata:
  name: mongodb-root
  namespace: {{ NAMESPACE }}
type: Opaque
stringData:
  password: {{ MONGODB_ROOT }}

---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: prod-mongodb
  namespace: {{ NAMESPACE }}
spec:
  secretName: prod-mongodb-tls
  dnsNames:
    - "{{ MONGO_DOMAIN | b64encode }}"
  issuerRef:
    name: le-prod
    kind: ClusterIssuer

---
apiVersion: traefik.io/v1alpha1
kind: IngressRouteTCP
metadata:
  name: prod-mongodb-ingress
  namespace: {{ NAMESPACE }}
spec:
  entryPoints: 
    - apisecure
  routes:
  - match: HostSNI(`{{ MONGO_DOMAIN }}`)
    services:
    - name: prod-mongodb-svc
      port: 27017
  tls:
    secretName: prod-mongodb-tls
