---
apiVersion: mongodbcommunity.mongodb.com/v1
kind: MongoDBCommunity
metadata:
  name: example-mongodb
  namespace: default
  labels:
    app: example-mongodb
spec:
  members: 1
  type: ReplicaSet
  version: "6.0.5"
  security:
    authentication:
      modes: ["SCRAM"]
  users:
    - name: root
      db: admin
      passwordSecretRef:
        name: mongodb-root
      roles:
        - name: Admin
          db: admin
        - name: userAdminAnyDatabase
          db: admin
      scramCredentialsSecretName: my-scram
  statefulSet:
    spec:
      selector:
        matchLabels:
          app: example-mongodb
      template:
        metadata:
          labels:
            app: example-mongodb
        spec:
          containers:
            - name: mongod
              resources:
                requests:
                  cpu: "200m"       # Minimum CPU guaranteed
                  memory: "300Mi"   # Minimum memory guaranteed
                limits:
                  cpu: "500m"       # Maximum CPU allowed
                  memory: "400Mi"   # Maximum memory allowed
            - name: mongodb-agent
              resources:
                requests:
                  cpu: "200m"
                  memory: "300Mi"
                limits:
                  cpu: "500m"
                  memory: "400Mi"
      volumeClaimTemplates:
        - metadata:
            name: data-volume
          spec:
            storageClassName: longhorn-retain
            accessModes: [ "ReadWriteOnce" ]
            resources:
              requests:
                storage: 5Gi

---
apiVersion: v1
kind: Secret
metadata:
  name: mongodb-root
  namespace: default
type: Opaque
stringData:
  password: {{ MONGODB_ROOT }}

---
apiVersion: v1
kind: Service
metadata:
  name: example-mongodb
  namespace: default
spec:
  ports:
    - port: 27017
      targetPort: 27017
  selector:
    app:  example-mongodb

---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: example-mongodb
  namespace: default
spec:
  secretName: example-mongodb-tls
  dnsNames:
    - "mongodb.lb.meyerstk.com"
  issuerRef:
    name: le-prod
    kind: ClusterIssuer

---
apiVersion: traefik.io/v1alpha1
kind: IngressRouteTCP
metadata:
  name: example-mongodb-ingress
  namespace: default
spec:
  entryPoints: 
    - tcp
  routes:
  - match: HostSNI(`mongodb.lb.meyerstk.com`)
    services:
    - name: example-mongodb
      port: 27017
  tls: 
    secretName: example-mongodb-tls
